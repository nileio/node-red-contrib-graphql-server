{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch gensourcemaps Program",
      "program": "/usr/local/lib/node_modules/nr-gen-source-maps/bin/gensourcemaps.js",
      "args": ["--sourceRoot", "/src/", "-o", "html"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug server&client",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--preserve-symlinks",
        "--experimental-modules",
        "--config",
        ".nodemon.json",
        "--exec",
        "npm run debug"
      ],
      "sourceMaps": true,
      "smartStep": true,
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnFirstSessionStart",
      "port": 9229,
      //"skipFiles": ["node_modules/*", "vendor/*"],
      "skipFiles": [
        "vendor.js",
        "red.*.js",
        "red/*.js",
        "vendor/*.js",
        "vendor/*",
        "red/*",
        "<node_internals>/*"
      ],
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "Started flows",
        "uriFormat": "http://127.0.0.1:1880"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "client",
      "url": "http://localhost:1880",
      "trace": "verbose",
      "skipFiles": [
        "vendor.js",
        "red.*.js",
        "red/*.js",
        "vendor/*.js",
        "vendor/*",
        "red/*",
        "<node_internals>/*"
      ],
      "smartStep": true,
      "disableNetworkCache": true,
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "pathMapping": {
        "/": "/usr/local/lib/node_modules/node-red/node_modules/@node-red/editor-client/public/",
        "/debug/view/": "/usr/local/lib/node_modules/node-red/node_modules/@node-red/nodes/core/core/lib/debug/",
        "/src/": "${workspaceFolder}/src/"
      }
    },

    {
      "type": "node",
      "request": "launch",
      "name": "using NPM",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start"],
      "port": 9229,
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "serverReadyAction": {
        "webRoot": "${workspaceFolder}",
        "action": "debugWithChrome",
        "pattern": "Started flows",
        "uriFormat": "http://127.0.0.1:1880"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "using NPM server only",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug"],
      "port": 9229,
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "smartStep": true
    }
  ],
  "compounds": [
    {
      "name": "Compound Debug",
      "configurations": ["using NPM server only", "client"]
    }
  ]
}
